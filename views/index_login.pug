doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel="stylesheet", href="/css/bootstrap/bootstrap.min.css")
        link(rel="stylesheet" href="/css/index_logout.css")
        title ES-Bauteileverwaltung
    body
        header
            div(class="container-fluid  header")
                div(class="row justify-content-between")
                    a(class="col-6", href="/")
                        div(class="row")
                            img(src="/images/microchip.svg", alt="Logo", width="40", height="40")
                            h1 ES-Bauteileverwaltung

        section
            div(class="jumbotron infobox")
                div(class="container")
                    div( class="row justify-content-center mb-4")
                        h3 
                            strong Anmelden
                    div( class="row")
                        div(class="col")
                            form(action="/", method="post")
                                div(class="form-group")
                                    label(for="username") Benutzername
                                    input(type="text" class="form-control" id="username" placeholder="Benutzername eingeben")
                                div(class="form-group")
                                    label(for="passwort") Passwort
                                    input(type="password" class="form-control" id="passwort" placeholder="Passwort")
                                div(class="row justify-content-center")
                                    button(type="submit" class="btn btn-outline-dark") Einloggen

        footer(class="footer")
            div(class="container")
                








